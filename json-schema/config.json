{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/suzuki-shunsuke/validate-pr-review-app/pkg/config/config",
  "$ref": "#/$defs/Config",
  "$defs": {
    "AWS": {
      "properties": {
        "secret_id": {
          "type": "string"
        },
        "use_lambda_function_url": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "secret_id"
      ]
    },
    "Config": {
      "properties": {
        "app_id": {
          "type": "integer"
        },
        "installation_id": {
          "type": "integer"
        },
        "aws": {
          "$ref": "#/$defs/AWS"
        },
        "google_cloud": {
          "$ref": "#/$defs/GoogleCloud"
        },
        "check_name": {
          "type": "string"
        },
        "trust": {
          "$ref": "#/$defs/Trust"
        },
        "templates": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "log_level": {
          "type": "string"
        },
        "repositories": {
          "items": {
            "$ref": "#/$defs/Repository"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "app_id",
        "installation_id"
      ]
    },
    "GoogleCloud": {
      "properties": {
        "secret_name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "secret_name"
      ]
    },
    "Repository": {
      "properties": {
        "repositories": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "trust": {
          "$ref": "#/$defs/Trust"
        },
        "ignored": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "repositories",
        "trust"
      ]
    },
    "Trust": {
      "properties": {
        "trusted_machine_users": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "untrusted_machine_users": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "trusted_apps": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}
